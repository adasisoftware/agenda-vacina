{% extends 'templates/base.html.twig' %}

{% block content %}
	<div class="row justify-content-end card-header py-3 ">
		<a href="/paciente" class="btn btn-primary btn-sm">
			Voltar
		</a>
	</div>
	<div class="row justify-content-center">
		<div class="col-lg-8 ">
			<div class="p-5">
				<div class="text-center">
					<h1 class="h4 text-gray-900 mb-4">{{ title }}</h1>
				</div>
				<form method="post" class="user center-block" action="{{ base_url('/agenda/save') }}">

					{% if agenda %}
						<input type="hidden" name="id" value="{{ agenda.id }}"/>
					{% endif %}

					<div class="form-group row">
						<div class="col-sm-12 mb-3 mb-sm-0">
							<select class="custom-select" id="grupo_id" name="grupo_id">
								<option value="" disabled selected>Selecionar Grupo</option>
								{% for g in grupos %}
									<option value="{{ g.id }}">{{ g.nome }}</option>
								{% endfor %}
							</select>
						</div>
					</div>
					<div class="form-group row">
						<div class="col-sm-6 mb-3 mb-sm-0">
							<input type="number" class="form-control form-control-user" id="vagas" name="vagas" placeholder="Quantidades de Vagas">
						</div>
						<div class="col-sm-6 mb-3 mb-sm-0">
							<input type="datetime-local" class="form-control form-control-user" id="data_hora" name="data_hora">
						</div>
					</div>
					<div class="form-group row">
						<div class="col-sm-12 mb-3 mb-sm-0">
							<button class="btn btn-primary btn-user btn-block">Salvar</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
